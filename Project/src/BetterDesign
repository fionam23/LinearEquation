Constructor
    public LinearEquation(String firstCoordinate, String secondCoordinate){
    slope = (x2-x1)/(y2-y1)
    intercept = (y1-slope*x1)
    distanceOfPoints = Math.sqrt(Math.pow(x2-x1,2)+ Math.pow(y2-y1, 2));

    end}

